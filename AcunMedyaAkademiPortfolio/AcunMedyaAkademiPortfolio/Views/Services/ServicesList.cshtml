@model List<AcunMedyaAkademiPortfolio.Models.TblService>
@{
    ViewBag.Title = "ServicesList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetlerim</h2>
<table class="table table-bordered">
    <tr>
        <th>Service ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Image Url</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:40px;height:40px;"</td>


            <td><a href="/Services/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Services/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Services/CreateService/" class="btn btn-primary">Oluştur</a>
