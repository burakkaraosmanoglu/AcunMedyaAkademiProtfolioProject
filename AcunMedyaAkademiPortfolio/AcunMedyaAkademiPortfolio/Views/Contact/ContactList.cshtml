@model List<AcunMedyaAkademiPortfolio.Models.TblContact>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>ContactList</h2>
<table class="table table-bordered">
    <tr>
        <th>ContactID</th>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Mesajı Görüntüle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Contactid</td>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td><a href="/Contact/OpenContact/@item.Contactid" class="btn btn-info">Mesajı Görüntüle</a></td>
            <td><a href="/Contact/DeleteContact/@item.Contactid" class="btn btn-danger">Sil</a></td>
        </tr>
    }

</table>


